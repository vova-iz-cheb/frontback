generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:example@localhost:5432/mydb?schema=public"
}


model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  posts SimplePost[]
}

model SimplePost {
  id        Int      @default(autoincrement()) @id
  title     String
  content   String?
  published Boolean? @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model dog {
  id   Int    @id(map: "PK_187826f37fd8e592a5711350db1") @default(autoincrement())
  name String @db.VarChar
  size Int
}
